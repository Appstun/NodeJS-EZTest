{
  "name": "nodejs-eztest",
  "displayName": "NodeJS-EZTest",
  "publisher": "Appstun",
  "description": "Enables testing of Node.js projects with just the click of a button.",
  "private": true,
  "version": "1.2.2",
  "icon": "/icons/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Appstun/NodeJS-EZTest"
  },
  "license": "CC-BY-4.0",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Testing"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "NodeJS-EZTest",
      "type": "object",
      "properties": {
        "nodejs-eztest.waitForCodeToFinish": {
          "type": "boolean",
          "default": true,
          "description": "Wait for the code to finish before closing test terminal."
        },
        "nodejs-eztest.finishWaitTime": {
          "type": "integer",
          "default": 15,
          "minimum": 2,
          "maximum": 300,
          "description": "Time in seconds to wait for code to finish before closing test terminal."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.57.1",
    "glob": "^8.1.0",
    "mocha": "^10.8.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "node-json-db": "^2.4.0"
  }
}
